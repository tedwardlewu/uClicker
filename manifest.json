{
  "manifest_version": 3,
  "name": "iClicker Poll Detector", 
  "version": "1.0",
  "description": "Detects and notifies you when iClicker polls are available",
  "permissions": ["activeTab", "storage", "notifications"],
  "host_permissions": ["https://student.iclicker.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://student.iclicker.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
